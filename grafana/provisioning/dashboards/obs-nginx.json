{
    "uid": "obs-nginx",
    "title": "obs-nginx Overview",
    "tags": [
        "nginx"
    ],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "panels": [
        {
            "id": 1,
            "title": "Total Requests",
            "type": "stat",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "value",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "sum(django_http_requests_total_by_method_total)",
                    "legendFormat": "Total"
                }
            ]
        },
        {
            "id": 2,
            "title": "Request Rate",
            "type": "stat",
            "gridPos": {
                "x": 6,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "value",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "sum(rate(django_http_requests_total_by_method_total[1m]))",
                    "legendFormat": "req/s"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps"
                }
            }
        },
        {
            "id": 3,
            "title": "Error Rate (4xx+5xx)",
            "type": "stat",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "background",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "sum(rate(django_http_responses_total_by_status_total{status=~\"[45]..\"}[5m]))"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": 0
                            },
                            {
                                "color": "red",
                                "value": 0.1
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 4,
            "title": "Avg Response Time",
            "type": "stat",
            "gridPos": {
                "x": 18,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "value",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "histogram_quantile(0.50, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "id": 5,
            "title": "Request Rate by Method",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 4,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_requests_total_by_method_total{method=\"GET\"}[1m])",
                    "legendFormat": "GET"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_requests_total_by_method_total{method=\"POST\"}[1m])",
                    "legendFormat": "POST"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_requests_total_by_method_total{method=\"DELETE\"}[1m])",
                    "legendFormat": "DELETE"
                }
            ]
        },
        {
            "id": 6,
            "title": "Status Code Breakdown",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 4,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_responses_total_by_status_total{status=~\"2..\"}[1m])",
                    "legendFormat": "2xx"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_responses_total_by_status_total{status=~\"3..\"}[1m])",
                    "legendFormat": "3xx"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_responses_total_by_status_total{status=~\"4..\"}[1m])",
                    "legendFormat": "4xx"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(django_http_responses_total_by_status_total{status=~\"5..\"}[1m])",
                    "legendFormat": "5xx"
                }
            ]
        },
        {
            "id": 7,
            "title": "Latency p50/p95/p99",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 12,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "histogram_quantile(0.50, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
                    "legendFormat": "p50"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
                    "legendFormat": "p95"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "histogram_quantile(0.99, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
                    "legendFormat": "p99"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "id": 8,
            "title": "Access Logs",
            "type": "logs",
            "gridPos": {
                "x": 12,
                "y": 12,
                "w": 12,
                "h": 8
            },
            "options": {
                "showTime": true,
                "wrapLogMessage": true,
                "sortOrder": "Descending"
            },
            "targets": [
                {
                    "datasource": {
                        "type": "loki",
                        "uid": "loki"
                    },
                    "expr": "{app=\"django\", log_type=\"access\"}"
                }
            ]
        }
    ],
    "schemaVersion": 38
}
