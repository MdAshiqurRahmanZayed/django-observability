{
  "uid": "django-main",
  "title": "Django Project Overview",
  "tags": ["django", "postgres", "nginx"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [

    {
      "id": 1,
      "title": "Django Container Status",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "options": { "colorMode": "background", "graphMode": "none" },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "up{job=\"django\"}",
        "legendFormat": "Django"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },

    {
      "id": 2,
      "title": "Prometheus Status",
      "type": "stat",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "options": { "colorMode": "background", "graphMode": "none" },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "up{job=\"prometheus\"}",
        "legendFormat": "Prometheus"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },

    {
      "id": 3,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "options": { "colorMode": "value", "graphMode": "area" },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "sum(django_http_requests_total_by_method_total)",
        "legendFormat": "Total"
      }]
    },

    {
      "id": 4,
      "title": "Error Rate (4xx + 5xx)",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 },
      "options": { "colorMode": "background", "graphMode": "none" },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "sum(rate(django_http_responses_total_by_status_total{status=~\"[45]..\"}[5m]))",
        "legendFormat": "Errors/s"
      }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },

    {
      "id": 5,
      "title": "DB Queries Total",
      "type": "stat",
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 },
      "options": { "colorMode": "value", "graphMode": "none" },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "django_db_execute_total",
        "legendFormat": "DB Queries"
      }]
    },

    {
      "id": 6,
      "title": "Uptime (hours)",
      "type": "stat",
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 },
      "options": { "colorMode": "value", "graphMode": "none" },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "(time() - process_start_time_seconds{job=\"django\"}) / 3600",
        "legendFormat": "Hours"
      }],
      "fieldConfig": { "defaults": { "unit": "h", "decimals": 1 } }
    },

    {
      "id": 7,
      "title": "Request Rate (req/sec)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_requests_total_by_method_total{method=\"GET\"}[1m])",
          "legendFormat": "GET"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_requests_total_by_method_total{method=\"POST\"}[1m])",
          "legendFormat": "POST"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_requests_total_by_method_total{method=\"DELETE\"}[1m])",
          "legendFormat": "DELETE"
        }
      ]
    },

    {
      "id": 8,
      "title": "Response Time p50 / p95 / p99",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.50, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.99, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },

    {
      "id": 9,
      "title": "HTTP Responses by Status Code",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"2..\"}[1m])",
          "legendFormat": "2xx"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"3..\"}[1m])",
          "legendFormat": "3xx"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"4..\"}[1m])",
          "legendFormat": "4xx"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"5..\"}[1m])",
          "legendFormat": "5xx"
        }
      ]
    },

    {
      "id": 10,
      "title": "DB Query Rate",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "rate(django_db_execute_total[1m])",
        "legendFormat": "queries/sec"
      }]
    },

    {
      "id": 11,
      "title": "DB Query Duration p95",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "histogram_quantile(0.95, rate(django_db_query_duration_seconds_bucket[5m]))",
        "legendFormat": "p95"
      }],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },

    {
      "id": 12,
      "title": "Django Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [{
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "expr": "process_resident_memory_bytes{job=\"django\"}",
        "legendFormat": "RSS Memory"
      }],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },

    {
      "id": 13,
      "title": "Log Volume by Level",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "sum by (level) (rate({app=\"django\"}[1m]))",
        "legendFormat": "{{level}}"
      }]
    },

    {
      "id": 14,
      "title": "Live Log Stream",
      "type": "logs",
      "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "{app=\"django\"}",
        "legendFormat": ""
      }]
    },

    {
      "id": 15,
      "title": "DB Query Logs",
      "type": "logs",
      "gridPos": { "x": 0, "y": 36, "w": 12, "h": 8 },
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "{app=\"django\", logger=\"django.db.backends\"}",
        "legendFormat": ""
      }]
    },

    {
      "id": 16,
      "title": "Error Logs",
      "type": "logs",
      "gridPos": { "x": 12, "y": 36, "w": 12, "h": 8 },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "{app=\"django\", level=\"ERROR\"}",
        "legendFormat": ""
      }]
    },

    {
      "id": 17,
      "title": "Access Logs (Gunicorn)",
      "type": "logs",
      "gridPos": { "x": 0, "y": 44, "w": 24, "h": 8 },
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      },
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "{app=\"django\", log_type=\"access\"}",
        "legendFormat": ""
      }]
    }

  ],
  "schemaVersion": 38
}
