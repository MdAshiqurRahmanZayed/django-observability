{
    "uid": "infra",
    "title": "Infrastructure Overview",
    "tags": [
        "infra",
        "node"
    ],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "panels": [
        {
            "id": 1,
            "title": "CPU Usage % (Host)",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
                    "legendFormat": "CPU %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "max": 100
                }
            }
        },
        {
            "id": 2,
            "title": "Memory Usage % (Host)",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
                    "legendFormat": "Memory %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "max": 100
                }
            }
        },
        {
            "id": 4,
            "title": "Network I/O (Host)",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*|br.*|docker.*\"}[1m])",
                    "legendFormat": "In - {{device}}"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|br.*|docker.*\"}[1m])",
                    "legendFormat": "Out - {{device}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "id": 5,
            "title": "Load Average (Host)",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 16,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "node_load1",
                    "legendFormat": "1m"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "node_load5",
                    "legendFormat": "5m"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "node_load15",
                    "legendFormat": "15m"
                }
            ]
        },
        {
            "id": 6,
            "title": "Disk I/O (Host)",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 16,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(node_disk_read_bytes_total[1m])",
                    "legendFormat": "Read - {{device}}"
                },
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "rate(node_disk_written_bytes_total[1m])",
                    "legendFormat": "Write - {{device}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "id": 7,
            "title": "Memory Total / Available",
            "type": "stat",
            "gridPos": {
                "x": 0,
                "y": 24,
                "w": 6,
                "h": 5
            },
            "options": {
                "colorMode": "value",
                "graphMode": "none",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "node_memory_MemTotal_bytes",
                    "legendFormat": "Total"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            }
        },
        {
            "id": 8,
            "title": "Memory Available",
            "type": "stat",
            "gridPos": {
                "x": 6,
                "y": 24,
                "w": 6,
                "h": 5
            },
            "options": {
                "colorMode": "value",
                "graphMode": "none",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "node_memory_MemAvailable_bytes",
                    "legendFormat": "Available"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            }
        },
        {
            "id": 9,
            "title": "Disk Free",
            "type": "stat",
            "gridPos": {
                "x": 12,
                "y": 24,
                "w": 6,
                "h": 5
            },
            "options": {
                "colorMode": "value",
                "graphMode": "none",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"}",
                    "legendFormat": "Free"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            }
        },
        {
            "id": 10,
            "title": "CPU Cores",
            "type": "stat",
            "gridPos": {
                "x": 18,
                "y": 24,
                "w": 6,
                "h": 5
            },
            "options": {
                "colorMode": "value",
                "graphMode": "none",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "count(node_cpu_seconds_total{mode=\"idle\"})",
                    "legendFormat": "Cores"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        }
    ],
    "schemaVersion": 38
}
