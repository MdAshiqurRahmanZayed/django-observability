{
    "uid": "obs-loki",
    "title": "obs-loki Overview",
    "tags": [
        "loki",
        "logs"
    ],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "panels": [
        {
            "id": 1,
            "title": "Loki Status",
            "type": "stat",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "background",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "loki_build_info",
                    "legendFormat": "Status"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "mappings": [
                        {
                            "type": "value",
                            "options": {
                                "1": {
                                    "text": "UP",
                                    "color": "green"
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": 2,
            "title": "Ingestion Rate",
            "type": "stat",
            "gridPos": {
                "x": 6,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "value",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "sum(rate(loki_distributor_lines_received_total[1m]))",
                    "legendFormat": "lines/sec"
                }
            ]
        },
        {
            "id": 3,
            "title": "Total Log Streams",
            "type": "stat",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "value",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "loki_ingester_memory_streams",
                    "legendFormat": "Streams"
                }
            ]
        },
        {
            "id": 4,
            "title": "Ingestion Errors",
            "type": "stat",
            "gridPos": {
                "x": 18,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "options": {
                "colorMode": "background",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "sum(rate(loki_discarded_samples_total[5m]))"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": 0
                            },
                            {
                                "color": "red",
                                "value": 1
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 5,
            "title": "Log Ingestion Rate",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 4,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "prometheus"
                    },
                    "expr": "sum(rate(loki_distributor_lines_received_total[1m]))",
                    "legendFormat": "lines/sec"
                }
            ]
        },
        {
            "id": 6,
            "title": "Log Volume by App",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 4,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "loki",
                        "uid": "loki"
                    },
                    "expr": "sum by (app) (rate({app=~\".+\"}[1m]))",
                    "legendFormat": "{{app}}"
                }
            ]
        },
        {
            "id": 7,
            "title": "Log Volume by Level",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 12,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "loki",
                        "uid": "loki"
                    },
                    "expr": "sum by (level) (rate({app=\"django\"}[1m]))",
                    "legendFormat": "{{level}}"
                }
            ]
        },
        {
            "id": 8,
            "title": "Recent Logs (all)",
            "type": "logs",
            "gridPos": {
                "x": 12,
                "y": 12,
                "w": 12,
                "h": 8
            },
            "options": {
                "showTime": true,
                "wrapLogMessage": true,
                "sortOrder": "Descending"
            },
            "targets": [
                {
                    "datasource": {
                        "type": "loki",
                        "uid": "loki"
                    },
                    "expr": "{app=\"django\"}"
                }
            ]
        }
    ],
    "schemaVersion": 38
}
